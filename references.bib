@article{suomalainenDirectReflectanceTransformation2021,
  title = {Direct Reflectance Transformation Methodology for Drone-Based Hyperspectral Imaging},
  author = {Suomalainen, Juha and Alves de Oliveira, Raquel and Hakala, Teemu and Koivumäki, Niko and Markelin, Lauri and Näsi, Roope and Honkavaara, Eija},
